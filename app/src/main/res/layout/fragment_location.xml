<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".views.fragment.Location">


    <android.support.v7.widget.CardView
            android:id="@+id/Imgvu_bride_mahal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/imgvu_groom_mahal">

       <LinearLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical">
           <ImageView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:scaleType="fitCenter"
                      android:src="@drawable/bride_mahal"/>
           <TextView style="@style/TitleFont"
           android:text="asdfasdf"/>
       </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/imgvu_groom_mahal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/Imgvu_bride_mahal"
            app:layout_constraintBottom_toTopOf="@+id/imgvu_root_between_mahals">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                   android:src="@drawable/bride_mahal"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/imgvu_root_between_mahals"
            android:layout_width="match_parent"

            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgvu_groom_mahal">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                   android:src="@drawable/bride_mahal"/>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>